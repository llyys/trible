{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/build/server/server.js",
      "stopOnEntry": false,
      "cwd": "${workspaceRoot}",
      "outFiles": ["${workspaceRoot}/build/server/**/*.js"],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      },
      "runtimeArgs": [
        "--nolazy", "--harmony"
      ],
      "protocol": "inspector",
      "preLaunchTask": "tsc",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Webpack",
      "program": "${workspaceRoot}/tools/build-client.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch task",
      "program": "${workspaceRoot}/tools/db.js",
      "args": [
        "up"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "db up",
      "program": "${workspaceRoot}/tools/db.js",
      "args": [
        "up", "--dry-run", "--verbose"
      ]
    },
    {
      "name": "Attach",
      "type": "node",
      "request": "attach",
      "restart": false
    }
  ]
}